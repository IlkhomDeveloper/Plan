<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTextDark"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/intoTitle"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/intoImage"
        app:layout_constraintVertical_bias="0.1"
        android:textStyle="bold"
        android:text="Plan"
        style="@style/TextLight" />
    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_circle_background_color="#fff"
        android:id="@+id/intoImage"
        app:civ_border_color="@color/colorButton"
        app:civ_border_width="1dp"
        app:layout_constraintLeft_toLeftOf="@id/intoTitle"
        app:layout_constraintRight_toRightOf="@id/intoTitle"
        app:layout_constraintTop_toBottomOf="@id/intoTitle"
        app:layout_constraintBottom_toTopOf="@id/intoTextInfo"
        android:src="@drawable/plan"
        app:layout_constraintVertical_bias="0.05"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/intoTextInfo"
        style="@style/TextLight"
        android:layout_width="0dp"
        android:gravity="center"
        android:maxLines="3"
        android:text="Matlab тизимида икки ўлчовли графикаси текисликда бир ўлчовли функция y=y(x) нинг графигини яратишга асосланади. Бунда барча керакли маълумотлар матрица шаклида жамланади ва:"
        app:layout_constraintLeft_toLeftOf="@id/guidFirst"
        app:layout_constraintRight_toRightOf="@id/guidSecond"
        app:layout_constraintBottom_toTopOf="@id/intoNextPage"
        app:layout_constraintTop_toBottomOf="@id/intoImage"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="12sp"/>
    <Button
        android:id="@+id/intoNextPage"
        android:text="next"
        android:textColor="@color/colorTextLight"
        android:background="@drawable/button_inpager"
        app:layout_constraintLeft_toLeftOf="@id/intoImage"
        app:layout_constraintRight_toRightOf="@id/intoImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intoTextInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidFirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidSecond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>
</androidx.constraintlayout.widget.ConstraintLayout>